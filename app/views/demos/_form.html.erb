<%= simple_form_for map do |f| %>
<div class="form-inputs">
  <%= f.input :name, placeholder: 'Map Subject' %>
  <%= f.input :description, as: :string, placeholder: 'What is this map about?' %>
  <div id="users">
    <%= f.association :user, collection: current_user.all_users_but_self, label_method: :name, input_html: { multiple: true, class: 'select2', style: 'font-family:"Karla", "Helvetica", "sans-serif";' }, label: "Select friends" %>
  </div>
  <label class="add-photo" style="width: 150px; margin: 0px 30px 70px 0px;">
    Upload a photo!
    <span style="display:none;">
      <%= f.input :photo, required: true, multiple: true,label_html: { class: 'map-photo' }, input_html: { style: 'border-bottom:none;' }, name: 'photo' %>
      <%= f.input :photo_cache, as: :hidden %>
    </span>
  </label>
</div>
  <%= f.button :submit, class: "main-btn", style: "margin-top: 40px;" %>
<% end %>


