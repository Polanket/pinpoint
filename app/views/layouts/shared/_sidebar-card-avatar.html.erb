<div class= "sidebar-card-avatar" >
  <div>
    <% if user.avatar.present? %>
      <%= cl_image_tag user.avatar.url(:avatar), class: "avatar-bordered"  %>
    <% else %>
      <%= image_tag "avatar.png",  class: "avatar-bordered" %>
    <% end %>
  </div>
  <div class="sidebar-card-infos">
    <div>
      <h2><%= user.name %></h2>
      <p><%= user.email %></p>
    </div>
    <div class="avatar-text">
    <%= link_to('Logout', destroy_user_session_path, method: :delete, style: "text-decoration: none;") %>
    </div>
  </div>
</div>

