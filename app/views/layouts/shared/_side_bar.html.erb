<div id="mySidebar" class="sidebar">
  <div class="sidebar-container-avatar">
    <%= render 'layouts/shared/sidebar-card-avatar', user: current_user%>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </div>

  <a href="javascript:void(0)" class="closebtn" id='close-nav'>&times;</a>
  <div class="sidebar-container">
    <h2 class="pintitle2"><i class="far fa-map"></i> My maps</h2>
    <% @my_maps.each do |map|  %>
      <%= link_to render('layouts/shared/sidebar-card', map: map), map_path(map)%>
    <% end %>
  </div>

  <div class="sidebar-container">
    <h2 class="pintitle2"><i class="fas fa-globe-europe"></i> Shared maps</h2>
    <% if @shared_maps.exists? %>
     <% @shared_maps.each  do |shared_map| %>
      <%= link_to render('layouts/shared/sidebar-card', map: shared_map), map_path(shared_map) %>
      <% end %>
    <% end %>
  </div>
  <div class="sidebar-btn">
    <%= link_to "ADD MAP", new_map_path, class: "main-btn" %>
  </div>
</div>
<div id="main">
  <button class="openbtn" id='open-nav'><i class="fas fa-bars"></i></button>
</div>




