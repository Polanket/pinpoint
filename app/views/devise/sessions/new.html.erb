<div class="login-form">
  <h1>Welcome back!</h1>
  <p>Log in to access your map(s)</p>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, wrapper_html: {style: "margin-bottom: 5px; padding: 0;"} if devise_mapping.rememberable?  %>
      <div class="password-lost">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>

    </div>
  <% end %>

    <div class="form-actions">

      <div class="margin-login">
        <%= link_to "Log in", new_session_path(resource_name), class: "main-btn" %><br />
      </div>

      <%= link_to "Sign up", new_registration_path(resource_name), class: "ghost-btn" %><br/>

    </div>
</div>

