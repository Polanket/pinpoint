<div class="location-card-container">
  <div class="location-card">
    <% if spot.photo.present? %>
      <div class="location-card-image"><%= image_tag spot.photo.first %></div>
    <% end %>
      <div class="location-card-content">
        <h2 class="location-card-title"><%= spot.name %></h2>
        <p class="location-card-text"><%= spot.address %></p>
        <%= link_to 'VIEW', map_added_location_path(spot.map_id, spot.id), method: :get, class:"location-card-btn main-btn" %>
      </div>
  </div>
</div>
