<div id="users">
  <% if @map.user_groups.blank? %>
    <p>Add the first user to <%= @map.name %></p>
  <% else %>
    <% @map.user_groups.each do |user_group| %>
      <%= render 'user_groups/show', user_group: user_group %>
    <% end %>
  <% end %>
</div>



<%= simple_form_for([ @map, @user_group ], remote: true) do |f|  %>
  <%= f.association :user %>
  <%= f.button :submit %>
<% end %>

